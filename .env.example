# NexusForge AI Platform Environment Configuration

# Server Configuration
PORT=5000
NODE_ENV=development

# Client URL (for CORS and Socket.IO)
CLIENT_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Database Configuration
# MongoDB (currently using in-memory storage for demo)
MONGODB_URI=mongodb://localhost:27017/nexusforge
# Redis (for caching and session management)
REDIS_URL=redis://localhost:6379

# AI Service API Keys
# OpenAI (for text generation, code generation, etc.)
OPENAI_API_KEY=your-openai-api-key
# Replicate (for image generation, music generation, etc.)
REPLICATE_API_KEY=your-replicate-api-key
# Stability AI (for image generation)
STABILITY_API_KEY=your-stability-api-key
# Hugging Face (for additional AI models)
HUGGINGFACE_API_KEY=your-huggingface-api-key

# File Storage Configuration
# AWS S3 (for file uploads and storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=nexusforge-uploads
# Google Cloud Storage (alternative to AWS)
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
GOOGLE_CLOUD_STORAGE_BUCKET=nexusforge-uploads

# Email Configuration (for password reset, notifications, etc.)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password
SMTP_SECURE=false

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SLOW_DOWN_DELAY_AFTER=50
SLOW_DOWN_DELAY_MS=500

# File Upload Limits
MAX_FILE_SIZE=52428800
MAX_FILES_PER_REQUEST=10

# AI Generation Limits
MAX_TOKENS_PER_REQUEST=4000
MAX_REQUESTS_PER_HOUR=100

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-key

# Logging
LOG_LEVEL=info
LOG_FILE=logs/nexusforge.log

# Development
DEBUG=true
ENABLE_SWAGGER=true
ENABLE_GRAPHIQL=true