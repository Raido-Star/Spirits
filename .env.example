# Nexus AI Platform - Environment Variables Template
# Copy this file to .env.local and fill in your values

# ===== BASIC CONFIGURATION =====
NODE_ENV=development
PORT=3000

# ===== DATABASE =====
# PostgreSQL Database URL
DATABASE_URL=postgresql://username:password@localhost:5432/nexus_ai
DATABASE_SSL=false

# ===== AUTHENTICATION =====
# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# Session Secret (generate with: openssl rand -base64 32)
SESSION_SECRET=your-super-secret-session-key-here

# ===== AI SERVICES =====
# OpenAI API Key
OPENAI_API_KEY=sk-your-openai-api-key-here

# Anthropic API Key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# Google AI API Key
GOOGLE_API_KEY=your-google-ai-api-key-here

# Azure OpenAI (optional)
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=your-deployment-name

# ===== EXTERNAL SERVICES =====
# Redis (optional but recommended for production)
REDIS_URL=redis://localhost:6379

# Elasticsearch (optional)
ELASTICSEARCH_URL=http://localhost:9200

# Webhook Secret
WEBHOOK_SECRET=your-webhook-secret-here

# ===== EMAIL CONFIGURATION =====
# Email settings for notifications
EMAIL_FROM=noreply@nexusai.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-here

# ===== CLOUD STORAGE =====
# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-here
AWS_SECRET_ACCESS_KEY=your-aws-secret-key-here
AWS_REGION=us-east-1
S3_BUCKET=nexus-ai-storage

# ===== MONITORING & ANALYTICS =====
# Sentry for error tracking
SENTRY_DSN=https://your-sentry-dsn-here

# Datadog for monitoring
DATADOG_API_KEY=your-datadog-api-key-here

# ===== SECURITY =====
# Rate limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# CORS origins (comma-separated)
CORS_ORIGIN=http://localhost:3000,https://yourdomain.com

# ===== FEATURES =====
# Feature flags
ENABLE_ANALYTICS=true
ENABLE_TELEMETRY=true
ENABLE_WEBSOCKETS=true

# ===== DEPLOYMENT =====
# Deployment URLs (auto-detected in most cases)
VERCEL_URL=
RAILWAY_URL=
DOCKER_IMAGE=

# ===== DEVELOPMENT =====
# Development-specific settings
DEBUG=true
LOG_LEVEL=debug